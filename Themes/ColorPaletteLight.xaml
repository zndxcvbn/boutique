<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Light Theme (Clean, bright) -->

    <!-- Font Sizes (base values, can be scaled by ThemeService) -->
    <sys:Double x:Key="FontSize.Small">10</sys:Double>
    <sys:Double x:Key="FontSize.Base">13</sys:Double>
    <sys:Double x:Key="FontSize.Medium">14</sys:Double>
    <sys:Double x:Key="FontSize.Large">16</sys:Double>
    <sys:Double x:Key="FontSize.Heading">18</sys:Double>

    <!-- Colors -->
    <Color x:Key="Color.PrimaryBackground">#FFFCFBF9</Color>
    <Color x:Key="Color.PanelBackground">#FFFFFFFF</Color>
    <Color x:Key="Color.CardBackground">#FFF3F1ED</Color>
    <Color x:Key="Color.Border">#FFD8D4CC</Color>
    <Color x:Key="Color.Accent">#FF5B8266</Color>
    <Color x:Key="Color.AccentMuted">#FF7A9E85</Color>
    <Color x:Key="Color.Warning">#FFC44D4D</Color>
    <Color x:Key="Color.TextPrimary">#FF1A1A1A</Color>
    <Color x:Key="Color.TextSecondary">#FF333333</Color>
    <Color x:Key="Color.TextDisabled">#FFAAAAAA</Color>

    <!-- Brushes (static, no DynamicResource chain) -->
    <SolidColorBrush x:Key="Brush.PrimaryBackground" Color="#FFFCFBF9" />
    <SolidColorBrush x:Key="Brush.PanelBackground" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="Brush.CardBackground" Color="#FFF3F1ED" />
    <SolidColorBrush x:Key="Brush.Border" Color="#FFD8D4CC" />
    <SolidColorBrush x:Key="Brush.Accent" Color="#FF5B8266" />
    <SolidColorBrush x:Key="Brush.AccentMuted" Color="#FF7A9E85" />
    <SolidColorBrush x:Key="Brush.Warning" Color="#FFC44D4D" />
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="#FF1A1A1A" />
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="#FF333333" />
    <SolidColorBrush x:Key="Brush.TextDisabled" Color="#FFAAAAAA" />

    <!-- Opacity variants -->
    <SolidColorBrush x:Key="Brush.BorderLight" Color="#FFE8E4DC" />
    <SolidColorBrush x:Key="Brush.HighlightOverlay" Color="#FF5B8266" Opacity="0.12" />

    <!-- Tutorial/GuideLine colors -->
    <SolidColorBrush x:Key="Brush.Tutorial.Overlay" Color="#FF000000" Opacity="0.6" />
    <SolidColorBrush x:Key="Brush.Tutorial.DialogBackground" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="Brush.Tutorial.DialogBorder" Color="#FF5B8266" />
    <SolidColorBrush x:Key="Brush.Tutorial.DialogForeground" Color="#FF1A1A1A" />
    <SolidColorBrush x:Key="Brush.Tutorial.ButtonBackground" Color="#FF5B8266" />
    <SolidColorBrush x:Key="Brush.Tutorial.ButtonForeground" Color="#FFFFFFFF" />

    <!-- Parse Error colors -->
    <SolidColorBrush x:Key="Brush.Error.Background" Color="#FFF8EEEC" />
    <SolidColorBrush x:Key="Brush.Error.Border" Color="#FFD4A5A0" />
    <SolidColorBrush x:Key="Brush.Error.Title" Color="#FFC44D4D" />
    <SolidColorBrush x:Key="Brush.Error.Text" Color="#FF6B4A4A" />
</ResourceDictionary>
