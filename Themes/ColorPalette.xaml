<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
    Brushes that reference theme colors via DynamicResource.
    The actual Color values are defined in ColorPaletteDark.xaml / ColorPaletteLight.xaml
    and loaded dynamically by ThemeService.
    -->

    <!-- Brushes (use DynamicResource so they update when theme changes) -->
    <SolidColorBrush x:Key="Brush.PrimaryBackground" Color="{DynamicResource Color.PrimaryBackground}" />
    <SolidColorBrush x:Key="Brush.PanelBackground" Color="{DynamicResource Color.PanelBackground}" />
    <SolidColorBrush x:Key="Brush.CardBackground" Color="{DynamicResource Color.CardBackground}" />
    <SolidColorBrush x:Key="Brush.Border" Color="{DynamicResource Color.Border}" />
    <SolidColorBrush x:Key="Brush.Accent" Color="{DynamicResource Color.Accent}" />
    <SolidColorBrush x:Key="Brush.AccentMuted" Color="{DynamicResource Color.AccentMuted}" />
    <SolidColorBrush x:Key="Brush.Warning" Color="{DynamicResource Color.Warning}" />
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{DynamicResource Color.TextPrimary}" />
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{DynamicResource Color.TextSecondary}" />
    <SolidColorBrush x:Key="Brush.TextDisabled" Color="{DynamicResource Color.TextDisabled}" />

    <!-- Opacity variants -->
    <SolidColorBrush x:Key="Brush.BorderLight" Color="{DynamicResource Color.Border}" Opacity="0.5" />
    <SolidColorBrush x:Key="Brush.HighlightOverlay" Color="{DynamicResource Color.Accent}" Opacity="0.12" />
</ResourceDictionary>
