<Window x:Class="RequiemGlamPatcher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utilities="clr-namespace:RequiemGlamPatcher.Utilities"
        xmlns:views="clr-namespace:RequiemGlamPatcher.Views"
        mc:Ignorable="d"
        Title="Requiem Glam Patcher" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <utilities:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        <utilities:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter" TrueOpacity="1" FalseOpacity="0.35"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Armor Patch">
                <views:ArmorPatchView DataContext="{Binding}"/>
            </TabItem>
            <TabItem Header="Outfit Creator">
                <views:OutfitCreatorView DataContext="{Binding}"/>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <ProgressBar Width="220"
                         Height="18"
                         Minimum="0"
                         Maximum="{Binding ProgressTotal}"
                         Value="{Binding ProgressCurrent}"
                         Visibility="{Binding IsProgressActive, Converter={StaticResource BoolToVisConverter}}"/>
            <TextBlock Text="{Binding StatusMessage}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>



