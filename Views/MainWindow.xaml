<Window x:Class="Boutique.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Boutique.Views"
        mc:Ignorable="d"
        Title="Boutique" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Brush.PrimaryBackground}">

    <Grid Background="{DynamicResource Brush.PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" Margin="8" SelectionChanged="TabControl_OnSelectionChanged">
            <TabItem Header="Distribution">
                <views:DistributionView DataContext="{Binding Distribution}" />
            </TabItem>
            <TabItem Header="Outfit Creator">
                <views:OutfitCreatorView DataContext="{Binding}" />
            </TabItem>
            <TabItem Header="Armor Patch">
                <views:ArmorPatchView DataContext="{Binding}" />
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,8,8">
            <ProgressBar Width="200"
                         Height="18"
                         Minimum="0"
                         Maximum="{Binding ProgressTotal}"
                         Value="{Binding ProgressCurrent}"
                         Visibility="{Binding IsProgressActive, Converter={StaticResource BoolToVisConverter}}" />
            <TextBlock Text="{Binding StatusMessage}" Margin="6,0,0,0" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
