<Window x:Class="RequiemGlamPatcher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utilities="clr-namespace:RequiemGlamPatcher.Utilities"
        mc:Ignorable="d"
        Title="Requiem Glam Patcher" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <utilities:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        <utilities:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter" TrueOpacity="1" FalseOpacity="0.35"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="Armor Patch">
                <Grid Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Expander Grid.Row="0" Header="Settings" IsExpanded="False" Margin="0,0,0,6">
                            <Border Padding="6,4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Skyrim Data Path:" Margin="0,0,6,3" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,6,3" MaxWidth="360"
                                             Text="{Binding Settings.SkyrimDataPath, UpdateSourceTrigger=PropertyChanged}"/>
                                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="0,0,0,3">
                                        <Button Content="Browse..." Command="{Binding Settings.BrowseDataPathCommand}" Margin="0,0,4,0" MinWidth="80"/>
                                        <Button Content="Auto-Detect" Command="{Binding Settings.AutoDetectPathCommand}" MinWidth="90"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Output Path:" Margin="0,0,6,3" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,6,3" MaxWidth="360"
                                             Text="{Binding Settings.OutputPatchPath, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Grid.Row="1" Grid.Column="2" Content="Browse..."
                                            Margin="0,0,0,3"
                                            Command="{Binding Settings.BrowseOutputPathCommand}"
                                            MinWidth="80"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Patch File Name:" Margin="0,0,6,3" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,6,3" MaxWidth="360"
                                             Text="{Binding Settings.PatchFileName, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Settings.FullOutputPath}" Foreground="Gray" Margin="0,0,0,3"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Detection:" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                               Text="{Binding Settings.DetectionSource}"
                                               FontStyle="Italic"
                                               Foreground="Green"/>
                                </Grid>
                            </Border>
                        </Expander>

                        <GroupBox Grid.Row="1" Header="Plugin Selection" Padding="10" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Source Plugin (Glam Mod):" FontWeight="Bold"/>
                                    <ComboBox ItemsSource="{Binding AvailablePlugins}"
                                              SelectedItem="{Binding SelectedSourcePlugin}"
                                              Margin="0,5,0,5"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              StaysOpenOnEdit="True"
                                              IsTextSearchCaseSensitive="False"
                                              ToolTip="Type to search plugins"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Target Plugin (e.g., Requiem.esp):" FontWeight="Bold"/>
                                    <ComboBox ItemsSource="{Binding AvailablePlugins}"
                                              SelectedItem="{Binding SelectedTargetPlugin}"
                                              Margin="0,5,0,5"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              StaysOpenOnEdit="True"
                                              IsTextSearchCaseSensitive="False"
                                              ToolTip="Type to search plugins"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <GroupBox Grid.Column="0" Header="Source Armors (Glam Mod)" Padding="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Search:" VerticalAlignment="Center"/>
                                        <TextBox Width="200" Margin="6,0,0,0"
                                                 Text="{Binding SourceSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Text="{Binding SourceArmors.Count, StringFormat='{}{0} armors'}"
                                                   Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <DataGrid x:Name="SourceArmorsGrid"
                                              Grid.Row="1"
                                              ItemsSource="{Binding SourceArmorsView}"
                                              SelectionChanged="SourceArmorsGrid_SelectionChanged"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              IsReadOnly="True"
                                              SelectionMode="Extended"
                                              CanUserSortColumns="True"
                                              EnableRowVirtualization="True"
                                              EnableColumnVirtualization="True"
                                              ScrollViewer.CanContentScroll="True"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              VirtualizingPanel.VirtualizationMode="Recycling">
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMapped}" Value="True">
                                                        <Setter Property="Background" Value="#FFE6F4EA"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.RowStyle>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Width="*" IsReadOnly="True">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="DisplayName" Mode="OneWay"/>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Slots" Width="130" IsReadOnly="True">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="SlotSummary" Mode="OneWay"/>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Form ID" Width="120" IsReadOnly="True" SortMemberPath="FormIdSortable">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="FormIdDisplay" Mode="OneWay"/>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Mod" Width="150" IsReadOnly="True">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="ModDisplayName" Mode="OneWay"/>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </GroupBox>

                            <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" Background="LightGray"/>

                            <GroupBox Grid.Column="2" Header="Target Armors (Stats Source)" Padding="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock Text="Search:" VerticalAlignment="Center"/>
                                            <TextBox Width="200" Margin="6,0,0,0"
                                                     Text="{Binding TargetSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                                            <TextBlock Text="{Binding TargetArmors.Count, StringFormat='{}{0} candidates'}"
                                                       Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="Auto-Match Threshold:" VerticalAlignment="Center"/>
                                            <Slider Width="120" Margin="6,0,0,0" Minimum="0" Maximum="1"
                                                    Value="{Binding AutoMatchThreshold}"
                                                    TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                                            <TextBlock Text="{Binding AutoMatchThreshold, StringFormat=P0}"
                                                       Margin="6,0,0,0" VerticalAlignment="Center"/>
                                            <Button Content="Auto-Match" Margin="12,0,0,0" Command="{Binding AutoMatchCommand}"/>
                                            <Button Content="Map Selection" Margin="12,0,0,0" Command="{Binding MapSelectedCommand}"/>
                                            <Button Content="Mark Glam Only" Margin="12,0,0,0" Command="{Binding MapGlamOnlyCommand}"/>
                                            <TextBlock Text="{Binding Matches.Count, StringFormat='{}{0} mappings'}"
                                                       Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>

                                    <DataGrid x:Name="TargetArmorsGrid"
                                              Grid.Row="1"
                                              ItemsSource="{Binding TargetArmorsView}"
                                              SelectedItem="{Binding SelectedTargetArmor, Mode=TwoWay}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              IsReadOnly="True"
                                              SelectionMode="Single"
                                              CanUserSortColumns="True"
                                              EnableRowVirtualization="True"
                                              EnableColumnVirtualization="True"
                                              ScrollViewer.CanContentScroll="True"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              VirtualizingPanel.VirtualizationMode="Recycling"
                                              Sorting="TargetArmorsDataGrid_Sorting">
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Setter Property="IsEnabled" Value="{Binding IsSlotCompatible}"/>
                                                <Setter Property="Opacity" Value="{Binding IsSlotCompatible, Converter={StaticResource BooleanToOpacityConverter}}"/>
                                            </Style>
                                        </DataGrid.RowStyle>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Width="*" IsReadOnly="True">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="DisplayName" Mode="OneWay"/>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Slots" Width="130" IsReadOnly="True">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="SlotSummary" Mode="OneWay"/>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Form ID" Width="120" IsReadOnly="True" SortMemberPath="FormIdSortable">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="FormIdDisplay" Mode="OneWay"/>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Mod" Width="150" IsReadOnly="True">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="ModDisplayName" Mode="OneWay"/>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Armor" Width="80" IsReadOnly="True">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="ArmorRating" Mode="OneWay"/>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </GroupBox>
                        </Grid>
                        <GroupBox Grid.Row="3" Header="Mapping Preview" Padding="10" Margin="0,10,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Matches.Count, StringFormat='{}{0} total mappings'}" FontWeight="Bold"/>
                                    <Button Content="Clear Mappings" Command="{Binding ClearMappingsCommand}" Margin="12,0,0,0"
                                            Visibility="{Binding Matches.Count, Converter={StaticResource BoolToVisConverter}}"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Text="Each mapping shows the glam armor on the left and the stat source on the right." Margin="0,6,0,10" Foreground="Gray"/>

                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="220">
                                    <ItemsControl ItemsSource="{Binding Matches}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#FFE0E0E0" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding Source.DisplayName}" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding Source.SlotSummary}" Margin="0,2,0,0"/>
                                                            <TextBlock Text="{Binding Source.FormIdDisplay}" Margin="0,2,0,0" Foreground="Gray"/>
                                                            <TextBlock Text="{Binding Source.ModDisplayName}" Margin="0,2,0,0" Foreground="Gray"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="1"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center">
                                                            <TextBlock Text="->"
                                                                       FontSize="24"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Text="{Binding Target.DisplayName}" FontWeight="Bold">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text" Value="Not mapped"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Target}" Value="{x:Null}">
                                                                                <Setter Property="Foreground" Value="Gray"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding IsGlamOnly}" Value="True">
                                                                                <Setter Property="Foreground" Value="Gray"/>
                                                                                <Setter Property="Text" Value="? Glam-only (right side not needed)"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <TextBlock Margin="0,2,0,0">
                                                                <Run Text="Slots: "/>
                                                                <Run>
                                                                    <Run.Text>
                                                                        <Binding Path="Target.SlotSummary" TargetNullValue="-" Mode="OneWay"/>
                                                                    </Run.Text>
                                                                </Run>
                                                            </TextBlock>
                                                            <TextBlock Margin="0,2,0,0">
                                                                <Run Text="Armor: "/>
                                                                <Run>
                                                                    <Run.Text>
                                                                        <Binding Path="Target.ArmorRating" Mode="OneWay" StringFormat="{}{0:F1}" TargetNullValue="-"/>
                                                                    </Run.Text>
                                                                </Run>
                                                                <Run Text="  |  Value: "/>
                                                                <Run>
                                                                    <Run.Text>
                                                                        <Binding Path="Target.Value" Mode="OneWay" StringFormat="{}{0}" TargetNullValue="-"/>
                                                                    </Run.Text>
                                                                </Run>
                                                            </TextBlock>
                                                            <TextBlock Margin="0,2,0,0" Foreground="Gray">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsGlamOnly}" Value="True">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Target}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                                <Run>
                                                                    <Run.Text>
                                                                        <Binding Path="Target.FormIdDisplay" Mode="OneWay" TargetNullValue=""/>
                                                                    </Run.Text>
                                                                </Run>
                                                                <Run Text=" Â· "/>
                                                                <Run>
                                                                    <Run.Text>
                                                                        <Binding Path="Target.ModDisplayName" Mode="OneWay" TargetNullValue=""/>
                                                                    </Run.Text>
                                                                </Run>
                                                            </TextBlock>
                                                            <TextBlock Margin="0,2,0,0" Foreground="Gray">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsGlamOnly}" Value="True">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                                <Run Text="? Glam-only mapping will zero the armor rating in the patch"/>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <Button Grid.Column="3"
                                                                Content="Remove"
                                                                Margin="12,0,0,0"
                                                                VerticalAlignment="Center"
                                                                Command="{Binding DataContext.RemoveMappingCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </GroupBox>

                        <Grid Grid.Row="4" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="{Binding Matches.Count, StringFormat='{}{0} mapping(s) queued'}"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Create Patch" Command="{Binding CreatePatchCommand}"
                                    IsEnabled="{Binding IsPatching, Converter={StaticResource InverseBoolConverter}}"
                                    Padding="20,10" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>
            </TabItem>
            <TabItem Header="Outfit Creator">
                <Grid Margin="10,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Outfit Source Plugin:" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding AvailablePlugins}"
                                      SelectedItem="{Binding SelectedOutfitPlugin}"
                                      Margin="0,5,0,0"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"
                                      StaysOpenOnEdit="True"
                                      IsTextSearchCaseSensitive="False"
                                      ToolTip="Type to search plugins"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,5,0,0">
                            <TextBlock Text="Search:" VerticalAlignment="Center"/>
                            <TextBox Width="220" Margin="6,0,0,0"
                                     Text="{Binding OutfitSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="{Binding OutfitArmors.Count, StringFormat='{}{0} armors'}"
                                       Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="Create Outfit"
                                Command="{Binding CreateOutfitCommand}"
                                Padding="20,10"
                                VerticalAlignment="Bottom"/>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <GroupBox Grid.Column="0" Header="Available Armors" Padding="8">
                            <Grid>
                                <DataGrid x:Name="OutfitArmorsGrid"
                                          ItemsSource="{Binding OutfitArmorsView}"
                                          SelectionChanged="OutfitArmorsGrid_SelectionChanged"
                                          MouseDoubleClick="OutfitArmorsGrid_MouseDoubleClick"
                                          PreviewMouseLeftButtonDown="OutfitArmorsGrid_PreviewMouseLeftButtonDown"
                                          MouseMove="OutfitArmorsGrid_MouseMove"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          SelectionMode="Extended"
                                          CanUserSortColumns="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Width="*" IsReadOnly="True">
                                            <DataGridTextColumn.Binding>
                                                <Binding Path="DisplayName" Mode="OneWay"/>
                                            </DataGridTextColumn.Binding>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Slots" Width="130" IsReadOnly="True">
                                            <DataGridTextColumn.Binding>
                                                <Binding Path="SlotSummary" Mode="OneWay"/>
                                            </DataGridTextColumn.Binding>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Form ID" Width="120" IsReadOnly="True" SortMemberPath="FormIdSortable">
                                            <DataGridTextColumn.Binding>
                                                <Binding Path="FormIdDisplay" Mode="OneWay"/>
                                            </DataGridTextColumn.Binding>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Mod" Width="150" IsReadOnly="True">
                                            <DataGridTextColumn.Binding>
                                                <Binding Path="ModDisplayName" Mode="OneWay"/>
                                            </DataGridTextColumn.Binding>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>

                        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" Background="LightGray"/>

                        <GroupBox Grid.Column="2" Header="Queued Outfits" Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border x:Name="NewOutfitDropZone"
                                        Grid.Row="0"
                                        Margin="0,0,0,10"
                                        Padding="12"
                                        Background="#08007ACC"
                                        BorderBrush="#FF7FAFF6"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        AllowDrop="True"
                                        DragEnter="NewOutfitDropZone_OnDragEnter"
                                        DragLeave="NewOutfitDropZone_OnDragLeave"
                                        DragOver="NewOutfitDropZone_OnDragOver"
                                        Drop="NewOutfitDropZone_OnDrop">
                                    <TextBlock Text="Drop armors here to create a new outfit (double-click an armor to quick add)."
                                               Foreground="Gray"
                                               FontStyle="Italic"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <Grid Grid.Row="1">
                                    <TextBlock Text="No outfits queued. Select armors on the left and click Create Outfit."
                                               Foreground="Gray" FontStyle="Italic"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasOutfitDrafts}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding OutfitDrafts}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="0,0,0,10"
                                                            Padding="8"
                                                            BorderBrush="#FFD9D9D9"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            AllowDrop="True"
                                                            DragEnter="OutfitDraftBorder_OnDragEnter"
                                                            DragLeave="OutfitDraftBorder_OnDragLeave"
                                                            DragOver="OutfitDraftBorder_OnDragOver"
                                                            Drop="OutfitDraftBorder_OnDrop">
                                                        <StackPanel>
                                                            <DockPanel Margin="0,0,0,6">
                                                                <TextBlock Text="{Binding Header}" FontWeight="Bold" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                                <Button Content="Remove Outfit"
                                                                        Command="{Binding RemoveSelfCommand}"
                                                                        DockPanel.Dock="Right"
                                                                        Padding="10,4"/>
                                                            </DockPanel>
                                                            <ItemsControl ItemsSource="{Binding Pieces}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid Margin="0,4,0,4">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <TextBlock Grid.Column="0"
                                                                                       Text="{Binding SummaryLine}"
                                                                                       VerticalAlignment="Center"
                                                                                       TextWrapping="NoWrap"
                                                                                       TextTrimming="CharacterEllipsis"/>
                                                                            <Button Grid.Column="1" Content="Remove"
                                                                                    Command="{Binding DataContext.RemovePieceCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                                    CommandParameter="{Binding}"
                                                                                    Margin="6,0,0,0"/>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                            <TextBlock Text="No pieces selected." Foreground="Gray" FontStyle="Italic" Margin="0,4,0,0">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding HasPieces}" Value="False">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="{Binding OutfitDrafts.Count, StringFormat='{}{0} outfit(s) queued'}"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="Save Outfits" Command="{Binding SaveOutfitsCommand}"
                                Padding="20,10" FontWeight="Bold">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasOutfitDrafts}" Value="False">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsCreatingOutfits}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <ProgressBar Width="220"
                         Height="18"
                         Minimum="0"
                         Maximum="{Binding ProgressTotal}"
                         Value="{Binding ProgressCurrent}"
                         Visibility="{Binding IsProgressActive, Converter={StaticResource BoolToVisConverter}}"/>
            <TextBlock Text="{Binding StatusMessage}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
