<UserControl x:Class="RequiemGlamPatcher.Views.OutfitCreatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">
    <Grid Margin="10,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Outfit Source Plugin:" FontWeight="Bold"/>
                <ComboBox ItemsSource="{Binding AvailablePlugins}"
                          SelectedItem="{Binding SelectedOutfitPlugin}"
                          Margin="0,5,0,0"
                          IsEditable="True"
                          IsTextSearchEnabled="True"
                          StaysOpenOnEdit="True"
                          IsTextSearchCaseSensitive="False"
                          ToolTip="Type to search plugins"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,5,0,0">
                <TextBlock Text="Search:" VerticalAlignment="Center"/>
                <TextBox Width="220" Margin="6,0,0,0"
                         Text="{Binding OutfitSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding OutfitArmors.Count, StringFormat='{}{0} armors'}"
                           Margin="12,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="2" Content="Create Outfit"
                    Command="{Binding CreateOutfitCommand}"
                    Padding="20,10"
                    VerticalAlignment="Bottom"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Available Armors" Padding="8">
                <Grid>
                    <DataGrid x:Name="OutfitArmorsGrid"
                              ItemsSource="{Binding OutfitArmorsView}"
                              SelectionChanged="OutfitArmorsGrid_SelectionChanged"
                              MouseDoubleClick="OutfitArmorsGrid_MouseDoubleClick"
                              PreviewMouseLeftButtonDown="OutfitArmorsGrid_PreviewMouseLeftButtonDown"
                              MouseMove="OutfitArmorsGrid_MouseMove"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Extended"
                              CanUserSortColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="*" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="DisplayName" Mode="OneWay"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Slots" Width="130" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="SlotSummary" Mode="OneWay"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Form ID" Width="120" IsReadOnly="True" SortMemberPath="FormIdSortable">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="FormIdDisplay" Mode="OneWay"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Mod" Width="150" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ModDisplayName" Mode="OneWay"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" Background="LightGray"/>

            <GroupBox Grid.Column="2" Header="Queued Outfits" Padding="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="NewOutfitDropZone"
                            Grid.Row="0"
                            Margin="0,0,0,10"
                            Padding="12"
                            Background="#08007ACC"
                            BorderBrush="#FF7FAFF6"
                            BorderThickness="1"
                            CornerRadius="4"
                            AllowDrop="True"
                            DragEnter="NewOutfitDropZone_OnDragEnter"
                            DragLeave="NewOutfitDropZone_OnDragLeave"
                            DragOver="NewOutfitDropZone_OnDragOver"
                            Drop="NewOutfitDropZone_OnDrop">
                        <TextBlock Text="Drop armors here to create a new outfit (double-click an armor to quick add)."
                                   Foreground="Gray"
                                   FontStyle="Italic"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <Grid Grid.Row="1">
                        <TextBlock Text="No outfits queued. Select armors on the left and click Create Outfit."
                                   Foreground="Gray" FontStyle="Italic"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasOutfitDrafts}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding OutfitDrafts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,10"
                                                Padding="8"
                                                BorderBrush="#FFD9D9D9"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                AllowDrop="True"
                                                DragEnter="OutfitDraftBorder_OnDragEnter"
                                                DragLeave="OutfitDraftBorder_OnDragLeave"
                                                DragOver="OutfitDraftBorder_OnDragOver"
                                                Drop="OutfitDraftBorder_OnDrop">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBox Width="200"
                                                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                 PreviewTextInput="OutfitNameTextBox_OnPreviewTextInput"
                                                                 DataObject.Pasting="OutfitNameTextBox_OnPasting"
                                                                 Margin="0,0,8,0"
                                                                 MaxLength="40"/>
                                                        <TextBlock Text="{Binding EditorId, StringFormat='ID: {0}'}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                                        <TextBlock Text="{Binding FormIdDisplay, StringFormat='FormID {0}'}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <Button Content="Preview"
                                                                Command="{Binding PreviewCommand}"
                                                                Padding="10,4"
                                                                Margin="0,0,8,0"/>
                                                        <Button Content="Remove Outfit"
                                                                Command="{Binding RemoveSelfCommand}"
                                                                Padding="10,4"/>
                                                    </StackPanel>
                                                </Grid>
                                                <ItemsControl ItemsSource="{Binding Pieces}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,4,0,4">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0"
                                                                           Text="{Binding SummaryLine}"
                                                                           VerticalAlignment="Center"
                                                                           TextWrapping="NoWrap"
                                                                           TextTrimming="CharacterEllipsis"/>
                                                                <Button Grid.Column="1" Content="Remove"
                                                                        Command="{Binding DataContext.RemovePieceCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                        CommandParameter="{Binding}"
                                                                        Margin="6,0,0,0"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <TextBlock Text="No pieces selected." Foreground="Gray" FontStyle="Italic" Margin="0,4,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasPieces}" Value="False">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="{Binding OutfitDrafts.Count, StringFormat='{}{0} outfit(s) queued'}"
                       VerticalAlignment="Center"/>
            <Button Grid.Column="1" Content="Save Outfits" Command="{Binding SaveOutfitsCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasOutfitDrafts}" Value="False">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsCreatingOutfits}" Value="True">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</UserControl>
