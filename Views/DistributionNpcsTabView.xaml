<UserControl x:Class="Boutique.Views.DistributionNpcsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Boutique.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:DistributionNpcsTabViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600"
             d:DesignWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Action Buttons and Search -->
        <Grid Grid.Row="0" Margin="0,6,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="â†» Refresh" Command="{Binding ScanNpcOutfitsCommand}"
                        Padding="12,4" Margin="0,0,6,0"
                        ToolTip="Rescan distribution files for NPC outfit assignments" />
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <CheckBox Content="Hide vanilla distributions" IsChecked="{Binding HideVanillaDistributions}"
                          VerticalAlignment="Center" Margin="0,0,16,0"
                          ToolTip="Hides NPCs with their default outfit as the winning assignment" />
                <TextBlock Text="Search:" Style="{StaticResource LabelTextStyle}" />
                <TextBox Text="{Binding NpcOutfitSearchText, UpdateSourceTrigger=PropertyChanged}"
                         MinWidth="250" ToolTip="Search NPCs by name, EditorID, outfit, or mod" />
            </StackPanel>
        </Grid>

        <!-- SPID-Style Filter Controls -->
        <GroupBox Grid.Row="1" Header="SPID-Style Filters" Margin="0,0,0,6" Padding="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Filter Controls Row -->
                <WrapPanel Grid.Row="0" Orientation="Horizontal">
                    <!-- Gender Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,2,16,2">
                        <TextBlock Text="Gender:" Style="{StaticResource LabelTextStyle}" />
                        <ComboBox ItemsSource="{Binding GenderFilterOptions}" SelectedItem="{Binding SelectedGenderFilter}"
                                  MinWidth="90" ToolTip="Filter by NPC gender (SPID trait: F/M)" />
                    </StackPanel>

                    <!-- Unique Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,2,16,2">
                        <TextBlock Text="Unique:" Style="{StaticResource LabelTextStyle}" />
                        <ComboBox ItemsSource="{Binding UniqueFilterOptions}" SelectedItem="{Binding SelectedUniqueFilter}"
                                  MinWidth="100" ToolTip="Filter by unique NPC flag (SPID trait: U/-U)" />
                    </StackPanel>

                    <!-- Templated Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,2,16,2">
                        <TextBlock Text="Templated:" Style="{StaticResource LabelTextStyle}" />
                        <ComboBox ItemsSource="{Binding TemplatedFilterOptions}" SelectedItem="{Binding SelectedTemplatedFilter}"
                                  MinWidth="110" ToolTip="Filter by whether NPC uses a template" />
                    </StackPanel>

                    <!-- Child Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,2,16,2">
                        <TextBlock Text="Age:" Style="{StaticResource LabelTextStyle}" />
                        <ComboBox ItemsSource="{Binding ChildFilterOptions}" SelectedItem="{Binding SelectedChildFilter}"
                                  MinWidth="80" ToolTip="Filter by child/adult status (SPID trait: C/-C)" />
                    </StackPanel>

                    <!-- Faction Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,2,16,2">
                        <TextBlock Text="Faction:" Style="{StaticResource LabelTextStyle}" />
                        <ComboBox ItemsSource="{Binding AvailableFactions}" SelectedItem="{Binding SelectedFaction}"
                                  DisplayMemberPath="DisplayName" MinWidth="150"
                                  IsEditable="True" IsTextSearchEnabled="True"
                                  ToolTip="Filter by faction membership (SPID FormFilter)" />
                    </StackPanel>

                    <!-- Race Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,2,16,2">
                        <TextBlock Text="Race:" Style="{StaticResource LabelTextStyle}" />
                        <ComboBox ItemsSource="{Binding AvailableRaces}" SelectedItem="{Binding SelectedRace}"
                                  DisplayMemberPath="DisplayName" MinWidth="120"
                                  IsEditable="True" IsTextSearchEnabled="True"
                                  ToolTip="Filter by race (SPID FormFilter)" />
                    </StackPanel>

                    <!-- Class Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,2,16,2">
                        <TextBlock Text="Class:" Style="{StaticResource LabelTextStyle}" />
                        <ComboBox ItemsSource="{Binding AvailableClasses}" SelectedItem="{Binding SelectedClass}"
                                  DisplayMemberPath="DisplayName" MinWidth="130"
                                  IsEditable="True" IsTextSearchEnabled="True"
                                  ToolTip="Filter by NPC class (SPID FormFilter)" />
                    </StackPanel>

                    <!-- Keyword Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,2,16,2">
                        <TextBlock Text="Keyword:" Style="{StaticResource LabelTextStyle}" />
                        <ComboBox ItemsSource="{Binding AvailableKeywords}" SelectedItem="{Binding SelectedKeyword}"
                                  DisplayMemberPath="DisplayName" MinWidth="140"
                                  IsEditable="True" IsTextSearchEnabled="True"
                                  ToolTip="Filter by keyword (SPID StringFilter)" />
                    </StackPanel>

                    <!-- Clear Filters Button -->
                    <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}"
                            Padding="8,2" VerticalAlignment="Center" Margin="0,2,6,2"
                            ToolTip="Reset all filters to default" />

                    <!-- Copy Filter Button -->
                    <Button Content="ðŸ“‹ Copy Filter" Command="{Binding CopyFilterCommand}"
                            Padding="8,2" VerticalAlignment="Center" Margin="0,2,0,2"
                            ToolTip="Copy current filter to paste in Create tab" />
                </WrapPanel>

                <!-- Filter Status Row -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="{Binding FilterDescription}" FontStyle="Italic" Foreground="#8EC07C" VerticalAlignment="Center" />
                    <TextBlock Margin="12,0,0,0" VerticalAlignment="Center">
                        <Run Text="Showing " />
                        <Run Text="{Binding FilteredCount, Mode=OneWay}" FontWeight="Bold" />
                        <Run Text=" of " />
                        <Run Text="{Binding TotalCount, Mode=OneWay}" />
                        <Run Text=" NPCs" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="200" MinHeight="100" />
            </Grid.RowDefinitions>

            <!-- NPC Outfit Assignments DataGrid -->
            <DataGrid Grid.Row="0"
                      ItemsSource="{Binding FilteredNpcOutfitAssignments}"
                      SelectedItem="{Binding SelectedNpcAssignment, Mode=TwoWay}"
                      AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                      IsReadOnly="True" CanUserSortColumns="True" SelectionMode="Single" SelectionUnit="FullRow"
                      GridLinesVisibility="All" HeadersVisibility="Column"
                      EnableRowVirtualization="True" EnableColumnVirtualization="True">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasConflict}" Value="True">
                                <Setter Property="Background" Value="#18FFD090" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter Property="Background" Value="#400078D4" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="*" CanUserSort="True" />
                    <DataGridTextColumn Header="EditorID" Binding="{Binding EditorId}" Width="180" CanUserSort="True" />
                    <DataGridTextColumn Header="Final Outfit" Binding="{Binding FinalOutfitDisplay}" Width="200" CanUserSort="True" />
                    <DataGridTextColumn Header="Mod" Binding="{Binding ModDisplayName}" Width="150" CanUserSort="True"
                                        ElementStyle="{StaticResource DataGridSecondaryColumnStyle}" />
                    <DataGridTextColumn Header="Distributor" Binding="{Binding WinningFileName}" Width="150" CanUserSort="True"
                                        ToolTipService.ToolTip="The distribution file determining this NPC's outfit">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="10" />
                                <Setter Property="Foreground" Value="#B8BB26" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Targeting" Binding="{Binding TargetingType}" Width="100" CanUserSort="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="10" />
                                <Setter Property="Foreground" Value="#8EC07C" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Chance" Width="60" CanUserSort="True" SortMemberPath="Chance">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ChanceDisplay}" Foreground="#CC6600" FontWeight="SemiBold"
                                           FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Conflict" Width="70" CanUserSort="True" SortMemberPath="HasConflict">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ConflictSummary}" Foreground="#FF8C00" FontWeight="Bold"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="LightGray" Margin="0,2" />

            <!-- Detail Panel -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Distribution Details -->
                <GroupBox Grid.Column="0" Header="Distribution Files" Padding="6">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SelectedNpcAssignment.Distributions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,4" Padding="6" CornerRadius="2"
                                            Background="#10000000" BorderBrush="LightGray" BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsWinner}" Value="True">
                                                        <Setter Property="Background" Value="#2000FF00" />
                                                        <Setter Property="BorderBrush" Value="Green" />
                                                        <Setter Property="BorderThickness" Value="2" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock Text="{Binding FileName}" FontWeight="Bold" />
                                                <TextBlock Text="{Binding FileType, StringFormat=' ({0})'}"
                                                           Style="{StaticResource SecondaryTextStyle}" Margin="4,0,0,0" />
                                                <TextBlock Text=" [WINNER]" Foreground="Green" FontWeight="Bold"
                                                           Visibility="{Binding IsWinner, Converter={StaticResource BoolToVisConverter}}" />
                                                <TextBlock Text="{Binding Chance, StringFormat=' ({0}% chance)'}"
                                                           Foreground="#CC6600" FontSize="10" VerticalAlignment="Center" Margin="4,0,0,0"
                                                           Visibility="{Binding Chance, Converter={StaticResource InequalityToVisConverter}, ConverterParameter=100}" />
                                            </StackPanel>
                                            <TextBlock Grid.Row="1" Text="{Binding OutfitEditorId, StringFormat='Outfit: {0}'}"
                                                       FontFamily="Consolas" FontSize="11" Margin="0,2,0,0" />
                                            <TextBlock Grid.Row="2" Text="{Binding TargetingDescription}"
                                                       Foreground="#8EC07C" FontSize="10" TextWrapping="Wrap" Margin="0,2,0,0"
                                                       Visibility="{Binding TargetingDescription, Converter={StaticResource StringEmptyToVisConverter}}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>

                <!-- Outfit Contents -->
                <GroupBox Grid.Column="2" Header="Outfit Contents" Padding="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" Text="{Binding SelectedNpcOutfitContents, Mode=OneWay}"
                                 IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="11" />
                        <Button Grid.Row="1" Content="Preview Outfit"
                                Command="{Binding PreviewNpcOutfitCommand}"
                                CommandParameter="{Binding SelectedNpcAssignment}"
                                Padding="12,4" Margin="0,6,0,0" HorizontalAlignment="Left" />
                    </Grid>
                </GroupBox>

                <!-- Filter Syntax Preview -->
                <GroupBox Grid.Column="4" Header="Filter Syntax Preview" Padding="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="SPID Format:" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <TextBox Text="{Binding GeneratedSpidSyntax, Mode=OneWay}"
                                         IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"
                                         FontFamily="Consolas" FontSize="10"
                                         Background="{StaticResource Brush.PanelBackground}"
                                         Foreground="{StaticResource Brush.TextPrimary}"
                                         Padding="4" Margin="0,0,0,8" />
                                <TextBlock Text="SkyPatcher Format:" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <TextBox Text="{Binding GeneratedSkyPatcherSyntax, Mode=OneWay}"
                                         IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"
                                         FontFamily="Consolas" FontSize="10"
                                         Background="{StaticResource Brush.PanelBackground}"
                                         Foreground="{StaticResource Brush.TextPrimary}"
                                         Padding="4" />
                            </StackPanel>
                        </ScrollViewer>
                        <TextBlock Grid.Row="1" Text="Copy syntax to use in your distribution INI files"
                                   FontStyle="Italic" Foreground="Gray" FontSize="10" Margin="0,6,0,0" />
                    </Grid>
                </GroupBox>

                <!-- NPC Details -->
                <GroupBox Grid.Column="6" Header="NPC Details" Padding="6">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- FormKey -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="FormKey:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <TextBlock Text="{Binding SelectedNpcFilterData.FormKeyString}"
                                           Style="{StaticResource FormKeyTextStyle}" />
                            </StackPanel>

                            <!-- Source Mod -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Mod:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <TextBlock Text="{Binding SelectedNpcFilterData.ModDisplayName}"
                                           Style="{StaticResource SecondaryTextStyle}" />
                            </StackPanel>

                            <!-- Gender -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Gender:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <TextBlock FontSize="11" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Male" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedNpcFilterData.IsFemale}" Value="True">
                                                    <Setter Property="Text" Value="Female" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- Traits -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Traits:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Unique" FontSize="10" Foreground="#8EC07C" Margin="0,0,6,0"
                                               Visibility="{Binding SelectedNpcFilterData.IsUnique, Converter={StaticResource BoolToVisConverter}}" />
                                    <TextBlock Text="Summonable" FontSize="10" Foreground="#8EC07C" Margin="0,0,6,0"
                                               Visibility="{Binding SelectedNpcFilterData.IsSummonable, Converter={StaticResource BoolToVisConverter}}" />
                                    <TextBlock Text="Child" FontSize="10" Foreground="#8EC07C" Margin="0,0,6,0"
                                               Visibility="{Binding SelectedNpcFilterData.IsChild, Converter={StaticResource BoolToVisConverter}}" />
                                    <TextBlock Text="Leveled" FontSize="10" Foreground="#8EC07C" Margin="0,0,6,0"
                                               Visibility="{Binding SelectedNpcFilterData.IsLeveled, Converter={StaticResource BoolToVisConverter}}" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Level -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Level:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <TextBlock Text="{Binding SelectedNpcFilterData.Level}" FontSize="11" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Race -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Race:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <TextBlock Text="{Binding SelectedNpcFilterData.RaceEditorId}" FontSize="11" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Class -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Class:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <TextBlock Text="{Binding SelectedNpcFilterData.ClassEditorId}" FontSize="11" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Voice Type -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Voice:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <TextBlock Text="{Binding SelectedNpcFilterData.VoiceTypeEditorId}" FontSize="11" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Combat Style -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Combat:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <TextBlock Text="{Binding SelectedNpcFilterData.CombatStyleEditorId}" FontSize="11" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Template -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Template:" FontWeight="SemiBold" Width="70" FontSize="11" />
                                <TextBlock FontSize="11" VerticalAlignment="Center"
                                           Text="{Binding SelectedNpcFilterData.TemplateEditorId, TargetNullValue='(None)'}"
                                           Foreground="{Binding SelectedNpcFilterData.TemplateEditorId, Converter={StaticResource NullToVisConverter}, ConverterParameter=Inverse, FallbackValue=Gray}" />
                            </StackPanel>

                            <!-- Factions -->
                            <TextBlock Text="Factions:" FontWeight="SemiBold" Margin="0,6,0,2" FontSize="11" />
                            <ItemsControl ItemsSource="{Binding SelectedNpcFilterData.Factions}" Margin="8,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding FactionEditorId}" FontSize="10" />
                                            <TextBlock Text="{Binding Rank, StringFormat=' (Rank {0})'}" FontSize="10" Foreground="Gray" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Keywords -->
                            <TextBlock Text="Keywords:" FontWeight="SemiBold" Margin="0,6,0,2" FontSize="11" />
                            <ItemsControl ItemsSource="{Binding SelectedNpcFilterData.Keywords}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate><WrapPanel /></ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TagBadgeStyle}">
                                            <TextBlock Text="{Binding}" FontSize="9"
                                                       Foreground="{StaticResource Brush.TextSecondary}" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
