<UserControl x:Class="Boutique.Views.SettingsPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Boutique.ViewModels"
             xmlns:themes="clr-namespace:Boutique.Themes"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="400"
             d:DesignWidth="1200">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Application Settings"
                   Style="{DynamicResource {x:Static themes:ResourceKeys.HeadingTextBlockStyleKey}}"
                   FontSize="18" Margin="0,0,0,20" />

        <!-- Settings Grid -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Row 0: Skyrim Release -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Skyrim Release:" Style="{DynamicResource {x:Static themes:ResourceKeys.SettingsLabelStyleKey}}" />
            <ComboBox Grid.Row="0" Grid.Column="1"
                      ItemsSource="{Binding Settings.SkyrimReleaseOptions}"
                      SelectedItem="{Binding Settings.SelectedSkyrimRelease}"
                      Width="140" Margin="0,0,0,12" HorizontalAlignment="Left" />

            <!-- Row 1: Skyrim Data Path -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Skyrim Data Path:" Style="{DynamicResource {x:Static themes:ResourceKeys.SettingsLabelStyleKey}}" />
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,12,12"
                     Text="{Binding Settings.SkyrimDataPath, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="0,0,0,12">
                <Button Content="Browse..." Command="{Binding Settings.BrowseDataPathCommand}" Margin="0,0,6,0" MinWidth="80" />
                <Button Content="Auto-Detect" Command="{Binding Settings.AutoDetectPathCommand}" MinWidth="90" />
            </StackPanel>

            <!-- Row 2: Patch File Name -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Patch File Name:" Style="{DynamicResource {x:Static themes:ResourceKeys.SettingsLabelStyleKey}}" />
            <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,12,12"
                     Text="{Binding Settings.PatchFileName, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Settings.FullOutputPath}"
                       Style="{DynamicResource {x:Static themes:ResourceKeys.SecondaryTextStyleKey}}" VerticalAlignment="Center" Margin="0,0,0,12" />

            <!-- Row 3: Output Path -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Output Path:" Style="{DynamicResource {x:Static themes:ResourceKeys.SettingsLabelStyleKey}}" />
            <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,12,12"
                     Text="{Binding Settings.OutputPatchPath, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Leave empty to use Skyrim Data path. Set a custom path for Wabbajack modlists or MO2 overwrite folder." />
            <Button Grid.Row="3" Grid.Column="2" Content="Browse..." Margin="0,0,0,12"
                    Command="{Binding Settings.BrowseOutputPathCommand}" MinWidth="80" />

            <!-- Row 4: Detection -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Detection:" Style="{DynamicResource {x:Static themes:ResourceKeys.SettingsLabelStyleKey}}" />
            <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                       Text="{Binding Settings.DetectionSource}"
                       FontStyle="Italic" VerticalAlignment="Center" Margin="0,0,0,12">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="Green" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Settings.DetectionFailed}" Value="True">
                                <Setter Property="Foreground" Value="Red" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Row 5: Theme -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Theme:" Style="{DynamicResource {x:Static themes:ResourceKeys.SettingsLabelStyleKey}}" />
            <ComboBox Grid.Row="5" Grid.Column="1"
                      ItemsSource="{Binding Settings.ThemeOptions}"
                      SelectedItem="{Binding Settings.SelectedTheme}"
                      Width="140" Margin="0,0,0,12" HorizontalAlignment="Left" />

            <!-- Row 6: Tutorial (hidden when feature is disabled) -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Tutorial:" VerticalAlignment="Center"
                       Visibility="{Binding Settings.IsTutorialEnabled, Converter={StaticResource BoolToVisConverter}}" />
            <Button Grid.Row="6" Grid.Column="1" Content="Restart Tutorial"
                    Command="{Binding Settings.RestartTutorialCommand}"
                    HorizontalAlignment="Left" MinWidth="120"
                    Visibility="{Binding Settings.IsTutorialEnabled, Converter={StaticResource BoolToVisConverter}}" />
        </Grid>
    </Grid>
</UserControl>
