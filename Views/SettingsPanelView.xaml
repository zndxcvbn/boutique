<UserControl x:Class="Boutique.Views.SettingsPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="800">
    <Grid>
        <Expander Header="Settings" IsExpanded="False">
            <Border Padding="4,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Skyrim Data Path:" Margin="0,0,4,2"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,4,2" MaxWidth="360"
                             Text="{Binding Settings.SkyrimDataPath, UpdateSourceTrigger=PropertyChanged}" />
                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="0,0,0,2">
                        <Button Content="Browse..." Command="{Binding Settings.BrowseDataPathCommand}" Margin="0,0,2,0"
                                MinWidth="80" />
                        <Button Content="Auto-Detect" Command="{Binding Settings.AutoDetectPathCommand}" MinWidth="90" />
                    </StackPanel>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Output Path:" Margin="0,0,4,2"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,4,2" MaxWidth="360"
                             Text="{Binding Settings.OutputPatchPath, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Grid.Row="1" Grid.Column="2" Content="Browse..."
                            Margin="0,0,0,2"
                            Command="{Binding Settings.BrowseOutputPathCommand}"
                            MinWidth="80" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Patch File Name:" Margin="0,0,4,2"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,4,2" MaxWidth="360"
                             Text="{Binding Settings.PatchFileName, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Settings.FullOutputPath}" Foreground="Gray"
                               Margin="0,0,0,2" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Detection:" Margin="0,0,4,2"
                               VerticalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                               Text="{Binding Settings.DetectionSource}"
                               FontStyle="Italic"
                               Foreground="Green"
                               Margin="0,0,0,2" />

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Data Cache:" Margin="0,0,4,2"
                               VerticalAlignment="Center" />
                    <TextBlock Grid.Row="4" Grid.Column="1"
                               Text="{Binding Settings.CacheStatus}"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               Margin="0,0,0,2" />
                    <Button Grid.Row="4" Grid.Column="2" Content="Clear Cache"
                            Command="{Binding Settings.ClearCacheCommand}"
                            IsEnabled="{Binding Settings.HasCache}"
                            MinWidth="80"
                            Margin="0,0,0,2" />

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Theme:" Margin="0,0,4,0"
                               VerticalAlignment="Center" />
                    <ComboBox Grid.Row="5" Grid.Column="1"
                              ItemsSource="{Binding Settings.ThemeOptions}"
                              SelectedItem="{Binding Settings.SelectedTheme}"
                              Width="120"
                              HorizontalAlignment="Left" />
                </Grid>
            </Border>
        </Expander>
    </Grid>
</UserControl>
