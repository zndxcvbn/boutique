<Window x:Class="Boutique.Views.PatchNameCollisionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        xmlns:res="clr-namespace:Boutique.Resources"
        Title="{lex:Loc Key={x:Static res:LocalizationKeys+PatchNameCollision.Title}}"
        Width="450" Height="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        Background="{StaticResource Brush.PrimaryBackground}">

  <Grid x:Name="RootGrid" Margin="20">
    <Grid.LayoutTransform>
      <ScaleTransform x:Name="RootScaleTransform" ScaleX="1" ScaleY="1" />
    </Grid.LayoutTransform>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" VerticalAlignment="Center">
      <TextBlock Text="{lex:Loc Key={x:Static res:LocalizationKeys+PatchNameCollision.Header}}"
                 FontWeight="SemiBold"
                 FontSize="14"
                 Foreground="{StaticResource Brush.TextPrimary}"
                 Margin="0,0,0,10" />
      <TextBlock x:Name="MessageTextBlock"
                 TextWrapping="Wrap"
                 FontSize="13"
                 Foreground="{StaticResource Brush.TextSecondary}" />
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
      <Button Content="{lex:Loc Key={x:Static res:LocalizationKeys+PatchNameCollision.Revert}}"
              Click="RevertButton_Click"
              MinWidth="120"
              Margin="0,0,10,0"
              Padding="12,6" />
      <Button Content="{lex:Loc Key={x:Static res:LocalizationKeys+PatchNameCollision.KeepName}}"
              Click="KeepButton_Click"
              MinWidth="100"
              Padding="12,6" />
    </StackPanel>
  </Grid>
</Window>
