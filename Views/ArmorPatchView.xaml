<UserControl x:Class="Boutique.Views.ArmorPatchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">
    <Grid Margin="0,0,0,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Plugin Selection" Padding="6" Margin="0,0,0,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0">
                    <TextBlock Text="Source Plugin (Glam Mod)" FontWeight="SemiBold" Margin="0,0,0,2" />
                    <ComboBox ItemsSource="{Binding AvailablePlugins}"
                              SelectedItem="{Binding SelectedSourcePlugin}"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              StaysOpenOnEdit="True"
                              IsTextSearchCaseSensitive="False"
                              ToolTip="Type to search plugins" />
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0">
                    <TextBlock Text="Target Plugin (Stats Source)" FontWeight="SemiBold" Margin="0,0,0,2" />
                    <ComboBox ItemsSource="{Binding AvailablePlugins}"
                              SelectedItem="{Binding SelectedTargetPlugin}"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              StaysOpenOnEdit="True"
                              IsTextSearchCaseSensitive="False"
                              ToolTip="Type to search plugins" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="6" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Source Armors (Glam Mod)" Padding="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,4,0" />
                        <TextBox Width="200"
                                 Text="{Binding SourceSearchText, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="{Binding SourceArmors.Count, StringFormat='{}{0} armors'}"
                                   Margin="8,0,0,0" VerticalAlignment="Center" />
                    </StackPanel>

                    <DataGrid x:Name="SourceArmorsGrid"
                              Grid.Row="1"
                              ItemsSource="{Binding SourceArmorsView}"
                              SelectionChanged="SourceArmorsGrid_SelectionChanged"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Extended"
                              CanUserSortColumns="True"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMapped}" Value="True">
                                        <Setter Property="Background" Value="#FFE6F4EA" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="*" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="DisplayName" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Slots" Width="130" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="SlotSummary" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Form ID" Width="120" IsReadOnly="True"
                                                SortMemberPath="FormIdSortable">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="FormIdDisplay" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Mod" Width="150" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ModDisplayName" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Stretch" Background="LightGray" />

            <GroupBox Grid.Column="2" Header="Target Armors (Stats Source)" Padding="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,4,0" />
                            <TextBox Width="200"
                                     Text="{Binding TargetSearchText, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="{Binding TargetArmors.Count, StringFormat='{}{0} candidates'}"
                                       Margin="8,0,0,0" VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Button Content="Map Selection" Command="{Binding MapSelectedCommand}" />
                            <Button Content="Mark Glam Only" Command="{Binding MapGlamOnlyCommand}" />
                            <TextBlock Text="{Binding Matches.Count, StringFormat='{}{0} mappings'}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="TargetArmorsGrid"
                              Grid.Row="1"
                              ItemsSource="{Binding TargetArmorsView}"
                              SelectedItem="{Binding SelectedTargetArmor, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserSortColumns="True"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              Sorting="TargetArmorsDataGrid_Sorting">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="IsEnabled" Value="{Binding IsSlotCompatible}" />
                                <Setter Property="Opacity" Value="0.35" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSlotCompatible}" Value="True">
                                        <Setter Property="Opacity" Value="1.0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="*" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="DisplayName" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Slots" Width="130" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="SlotSummary" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Form ID" Width="120" IsReadOnly="True"
                                                SortMemberPath="FormIdSortable">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="FormIdDisplay" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Mod" Width="150" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ModDisplayName" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Armor" Width="80" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ArmorRating" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <GroupBox Grid.Row="2" Header="Mapping Preview" Padding="6" Margin="0,4,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Matches.Count, StringFormat='{}{0} total mappings'}"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                    <Button Grid.Column="1"
                            Content="Clear All"
                            Command="{Binding ClearMappingsCommand}"
                            Visibility="{Binding Matches.Count, Converter={StaticResource BoolToVisConverter}}" />
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <ItemsControl ItemsSource="{Binding Matches}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#FFE0E0E0"
                                        BorderThickness="0,0,0,1"
                                        Padding="4,3"
                                        Background="Transparent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Source: Name (Mod) -->
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis">
                                            <Run Text="{Binding Source.DisplayName, Mode=OneWay}" FontWeight="SemiBold" />
                                            <Run Text=" (" Foreground="Gray" /><Run Text="{Binding Source.ModDisplayName, Mode=OneWay}" Foreground="Gray" /><Run Text=")" Foreground="Gray" />
                                        </TextBlock>

                                        <TextBlock Grid.Column="1"
                                                   Text="→"
                                                   Margin="8,0"
                                                   VerticalAlignment="Center"
                                                   Foreground="Gray" />

                                        <!-- Target: Name (Armor: X) or Glam-only -->
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center" TextTrimming="CharacterEllipsis">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsGlamOnly}" Value="True">
                                                            <Setter Property="Foreground" Value="Gray" />
                                                            <Setter Property="FontStyle" Value="Italic" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run FontWeight="SemiBold">
                                                <Run.Style>
                                                    <Style TargetType="Run">
                                                        <Setter Property="Text" Value="{Binding Target.DisplayName, Mode=OneWay}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsGlamOnly}" Value="True">
                                                                <Setter Property="Text" Value="Glam-only (zero stats)" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Run.Style>
                                            </Run>
                                            <Run Foreground="Gray">
                                                <Run.Style>
                                                    <Style TargetType="Run">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsGlamOnly}" Value="True">
                                                                <Setter Property="Text" Value="" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Target}" Value="{x:Null}">
                                                                <Setter Property="Text" Value="" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Run.Style>
                                                <Run.Text>
                                                    <MultiBinding StringFormat=" (AR: {0:F0}, Val: {1})">
                                                        <Binding Path="Target.ArmorRating" Mode="OneWay" />
                                                        <Binding Path="Target.Value" Mode="OneWay" />
                                                    </MultiBinding>
                                                </Run.Text>
                                            </Run>
                                        </TextBlock>

                                        <Button Grid.Column="3"
                                                Content="×"
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Padding="6,0"
                                                Margin="8,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="Remove mapping"
                                                Command="{Binding DataContext.RemoveMappingCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="3" Margin="0,6,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="{Binding Matches.Count, StringFormat='{}{0} mapping(s) queued'}"
                       VerticalAlignment="Center" />
            <Button Grid.Column="1" Content="Create Patch" Command="{Binding CreatePatchCommand}"
                    Padding="12,6" FontSize="13" FontWeight="Bold" HorizontalAlignment="Right">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="IsEnabled" Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPatching}" Value="True">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</UserControl>
